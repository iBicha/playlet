<component name="TrickPlayBar" extends="Group">
    <interface>
        <field id="progress" type="float" value="0" onChange="OnProgressChange" />
        <field id="position" type="float" value="0" onChange="OnPositionChange" />
        <field id="duration" type="float" value="0" onChange="OnDurationChange" />
        <field id="backgroundBarUri" type="uri" alias="BackgroundBar.uri" />
        <field id="filledBarBlendColor" type="color" alias="ProgressBar.blendColor" />
        <field id="trackImageUri" type="uri" alias="TrackImage.uri" />
    </interface>
    <children>
        <!-- bs:disable-next-line LOCALE_MISSING_TRANSLATIONS -->
        <Label id="PositionLabel" text="0:00"
            font="font:SmallestSystemFont"
            color="#DDDDDD"
            translation="[0,-20]" />

        <Poster
            id="BackgroundBar"
            uri="pkg:/images/white-pixel.png"
            blendColor="#262626"
            width="1144"
            height="6" />

        <Poster
            id="ProgressBar"
            uri="pkg:/images/white-pixel.png"
            blendColor="#FF1C30"
            width="1144"
            height="6" />

        <Poster
            id="TrackImage"
            uri=""
            width="1144"
            height="6" />

        <Poster
            id="SeekHandle"
            uri="pkg:/images/white-circle-xs.png"
            height="16"
            width="16" />

        <!-- bs:disable-next-line LOCALE_MISSING_TRANSLATIONS -->
        <Label id="DurationLabel" text="0:00"
            font="font:SmallestSystemFont"
            color="#DDDDDD"
            horizAlign="right"
            width="60"
            translation="[1084,-20]" />
    </children>
</component>
