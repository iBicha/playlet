<component name="PlaylistView" extends="Group" includes="AutoBind,Focus,ContextMenuProvider">
    <interface>
        <field id="content" type="node" onChange="OnContentSet" />
        <field id="appController" type="node" bind="/AppController" />
        <field id="invidious" type="node" bind="/Invidious" />
        <field id="playQueue" type="node" bind="/PlayQueue" />
        <field id="bookmarks" type="node" bind="/Bookmarks" />
        <field id="continueWatching" type="node" bind="/ContinueWatching" />
        <function name="OpenPlaylistChannel" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="0x242424" />
        <Poster
            id="backgroundSmall"
            width="1280"
            height="720"
            blendColor="0x323232" />
        <Poster
            id="background"
            width="1280"
            height="720"
            blendColor="0x323232">
            <LayoutGroup
                itemSpacings="[5,5,20]"
                translation="[65,90]">
                <Label
                    id="titleLabel"
                    width="500"
                    maxLines="2"
                    wrap="true">
                    <Font role="font" uri="font:BoldSystemFontFile" size="36" />
                </Label>
                <Label
                    id="subtitleLabel"
                    width="500"
                    font="font:SmallestBoldSystemFont" />
                <Label
                    id="updatedLabel"
                    width="500"
                    font="font:SmallestSystemFont" />
                <Label
                    id="descriptionLabel"
                    width="500"
                    maxLines="10"
                    wrap="true"
                    font="font:SmallestSystemFont" />
            </LayoutGroup>

            <MarkupGrid
                id="list"
                itemComponentName="PlaylistViewCell"
                itemSize="[550,106]"
                itemSpacing="[0,20]"
                numColumns="1"
                numRows="5"
                vertFocusAnimationStyle="floatingFocus"
                translation="[620,90]" />

        </Poster>
    </children>
</component>