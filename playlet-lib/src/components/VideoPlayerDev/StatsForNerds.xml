<component name="StatsForNerds" extends="Group" includes="Disposable">
    <interface>
        <!-- New wiring: prefer passing the actual Video node -->
        <field id="video" type="node" />
        <!-- Back-compat for older wiring (unused by the new implementation) -->
        <field id="player" type="node" />
    </interface>
    <children>
        <!-- Polling timer -->
        <Timer
            id="pollTimer"
            repeat="true"
            duration="1" />

        <!-- Background (translucent) + container -->
        <Rectangle
            id="statsBg"
            width="560"
            height="260"
            color="0x000000"
            opacity="0.75"
            visible="false"
            translation="[40, 130]">

            <LayoutGroup
                id="statsRoot"
                layoutDirection="vert"
                itemSpacings="[6]"
                translation="[12, 12]">

                <!-- Line 1 -->
                <LayoutGroup layoutDirection="horiz" itemSpacings="[12]">
                    <Label id="line1Label" width="220" color="0xFFFFFF" font="font:SmallestSystemFont" />
                    <Label id="line1Value" width="310" wrap="false" color="0xFFFFFF" font="font:SmallestSystemFont" />
                </LayoutGroup>

                <!-- Line 2 -->
                <LayoutGroup layoutDirection="horiz" itemSpacings="[12]">
                    <Label id="line2Label" width="220" color="0xFFFFFF" font="font:SmallestSystemFont" />
                    <Label id="line2Value" width="310" wrap="false" color="0xFFFFFF" font="font:SmallestSystemFont" />
                </LayoutGroup>

                <!-- Line 3 -->
                <LayoutGroup layoutDirection="horiz" itemSpacings="[12]">
                    <Label id="line3Label" width="220" color="0xFFFFFF" font="font:SmallestSystemFont" />
                    <Label id="line3Value" width="310" wrap="false" color="0xFFFFFF" font="font:SmallestSystemFont" />
                </LayoutGroup>

                <!-- Line 4 -->
                <LayoutGroup layoutDirection="horiz" itemSpacings="[12]">
                    <Label id="line4Label" width="220" color="0xFFFFFF" font="font:SmallestSystemFont" />
                    <Label id="line4Value" width="310" wrap="false" color="0xFFFFFF" font="font:SmallestSystemFont" />
                </LayoutGroup>

                <!-- Line 5 -->
                <LayoutGroup layoutDirection="horiz" itemSpacings="[12]">
                    <Label id="line5Label" width="220" color="0xFFFFFF" font="font:SmallestSystemFont" />
                    <Label id="line5Value" width="310" wrap="false" color="0xFFFFFF" font="font:SmallestSystemFont" />
                </LayoutGroup>

                <!-- Line 6 -->
                <LayoutGroup layoutDirection="horiz" itemSpacings="[12]">
                    <Label id="line6Label" width="220" color="0xFFFFFF" font="font:SmallestSystemFont" />
                    <Label id="line6Value" width="310" wrap="false" color="0xFFFFFF" font="font:SmallestSystemFont" />
                </LayoutGroup>

                <!-- Line 7 -->
                <LayoutGroup layoutDirection="horiz" itemSpacings="[12]">
                    <Label id="line7Label" width="220" color="0xFFFFFF" font="font:SmallestSystemFont" />
                    <Label id="line7Value" width="310" wrap="false" color="0xFFFFFF" font="font:SmallestSystemFont" />
                </LayoutGroup>

                <!-- Line 8 -->
                <LayoutGroup layoutDirection="horiz" itemSpacings="[12]">
                    <Label id="line8Label" width="220" color="0xFFFFFF" font="font:SmallestSystemFont" />
                    <Label id="line8Value" width="310" wrap="false" color="0xFFFFFF" font="font:SmallestSystemFont" />
                </LayoutGroup>

            </LayoutGroup>
        </Rectangle>
    </children>
</component>
