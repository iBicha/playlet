<component name="VideoPlayerButton" extends="Group">
    <interface>
        <field id="backgroundColor" type="color" value="#3C3C3C" />
        <!-- Focus should "brighten" (not invert) -->
        <field id="focusedBackgroundColor" type="color" value="#5A5A5A" />
        <field id="disabledBackgroundColor" type="color" value="#292929" />

        <field id="iconUri" type="uri" alias="icon.uri" />
        <field id="iconUri2" type="uri" alias="icon2.uri" />
        <field id="toggleState" type="boolean" value="true" onChange="OnToggleStateChange" />

        <field id="iconColor" type="color" value="#DDDDDD" />
        <field id="focusedIconColor" type="color" value="#FFFFFF" />
        <field id="disabledIconColor" type="color" value="#606060" />

        <field id="disabled" type="boolean" onChange="OnDisabledChange" />
        <field id="buttonFocused" type="boolean" onChange="OnButtonFocused" />
        <field id="buttonSelected" type="boolean" alwaysNotify="true" />
    </interface>
    <children>
        <Poster
            id="background"
            uri="pkg:/images/white-circle.png"
            width="42"
            height="42">
            <Poster
                id="icon"
                width="42"
                height="42">
            </Poster>
            <Poster
                id="icon2"
                width="42"
                height="42"
                visible="false">
            </Poster>
        </Poster>
    </children>
</component>