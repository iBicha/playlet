import "pkg:/components/JobSystem/Jobs.bs"
import "pkg:/components/JobSystem/JobSystem.bs"

function Init()
    labels = m.top.getChildren(-1, 0)
    fields = {}
    for each label in labels
        fields[label.id] = label.font
    end for
    m.global.addFields(fields)
end function

function OnNodeReady()
    JobSystem.QueueJob(m.top.jobQueue, Jobs.DownloadFontJob)
end function
