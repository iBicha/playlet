<component name="YouTubeAccountSelectionView" extends="Group" includes="AutoBind,Focus">
    <interface>
        <field id="accounts" type="array" onChange="OnAccountsChanged" />
        <field id="selectedAccount" type="assocarray" />
        <field id="appController" type="node" bind="/AppController" />
        <field id="wasClosed" type="boolean" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="#000000"
            opacity="0.5">
        </Rectangle>

        <Rectangle
            width="720"
            height="420"
            translation="[280,150]"
            color="#242424">
            <Label
                width="720"
                horizAlign="center"
                translation="[0,38]"
                text="Select an account">
                <Font role="font" uri="font:SystemFontFile" size="24" />
            </Label>
        </Rectangle>
    </children>
</component>