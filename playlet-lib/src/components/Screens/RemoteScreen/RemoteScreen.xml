<component name="RemoteScreen" extends="Group" includes="AutoBind,Focus">
    <interface>
        <field id="navBar" type="node" bind="/NavBar" />
        <field id="webServer" type="node" bind="/WebServer" />
        <field id="loungeService" type="node" bind="/LoungeService" />
        <field id="url" type="string" onChange="OnUrlSet" />
        <field id="qrCodeUrl" type="string" onChange="OnUrlSet" />
    </interface>
    <children>
        <Group id="noInternet" visible="false">
            <Label
                height="720"
                width="920"
                font="font:SmallSystemFont"
                horizAlign="center"
                vertAlign="center"
                text="Could not get IP address: are we connected to the internet?"
                wrap="true"
                translation="[180,0]"
            />
        </Group>
        <Group id="yesInternet" visible="false">
            <LayoutGroup
                translation="[640,360]"
                layoutDirection="horiz"
                vertAlignment="center"
                horizAlignment="center"
                itemSpacings="[30]">

                <LayoutGroup
                    vertAlignment="center"
                    itemSpacings="[30]">

                    <SettingCategory
                        id="WebAppButton"
                        displayText="Playlet Web App"
                        description="Use Playlet Remote in the browser"
                        maxWidth="540" />

                    <SettingCategory
                        id="LinkWithWiFiButton"
                        displayText="Link with Wi-Fi"
                        description="Cast from the YouTube app to Playlet"
                        maxWidth="540" />

                    <SettingCategory
                        id="LinkWithTvButton"
                        displayText="Link with TV code"
                        description="Cast from the YouTube app to Playlet"
                        maxWidth="540" />
                </LayoutGroup>

                <Group>
                    <LayoutGroup
                        id="WebAppPanel"
                        itemSpacings="[15]">
                        <Label
                            width="400"
                            height="30"
                            font="font:SmallBoldSystemFont"
                            horizAlign="center"
                            vertAlign="center"
                            text="Scan the QR code" />
                        <QrCodePoster
                            id="WebAppQrCodePoster"
                            height="400"
                            width="400"
                            loadHeight="400"
                            loadWidth="400"
                            padding="20" />
                        <Label
                            id="WebAppUrlLabel"
                            width="400"
                            height="30"
                            font="font:SmallBoldSystemFont"
                            horizAlign="center"
                            vertAlign="center" />
                    </LayoutGroup>

                    <LayoutGroup
                        id="LinkWithWiFiPanel"
                        itemSpacings="[12]"
                        vertAlignment="center"
                        translation="[0,245]">
                        <LayoutGroup layoutDirection="horiz" itemSpacings="[15]">
                            <Label
                                font="font:SmallSystemFont"
                                text="1." />
                            <Label
                                font="font:SmallSystemFont"
                                width="380"
                                wrap="true"
                                text="On your phone, connect to the same Wi-Fi network as this device." />
                        </LayoutGroup>
                        <LayoutGroup layoutDirection="horiz" itemSpacings="[15]">
                            <Label
                                font="font:SmallSystemFont"
                                text="2." />
                            <Label
                                font="font:SmallSystemFont"
                                width="380"
                                wrap="true"
                                text="Open the YouTube app on your phone." />
                        </LayoutGroup>
                        <LayoutGroup layoutDirection="horiz" itemSpacings="[15]">
                            <Label
                                font="font:SmallSystemFont"
                                text="3." />
                            <MultiStyleLabel
                                id="WifiInstructionWithDeviceNameLabel"
                                width="380"
                                wrap="true"
                                text="Tap the cast icon and select this device." />
                        </LayoutGroup>
                        <Label
                            text="Roku connected to:"
                            translation="[0,220]">
                            <Font role="font" uri="font:SystemFontFile" size="20" />
                        </Label>
                        <Label
                            id="WifiNameLabel"
                            color="#4287f5"
                            translation="[0,250]">
                            <Font role="font" uri="font:MediumSystemFontFile" size="28" />
                        </Label>
                    </LayoutGroup>

                    <LayoutGroup
                        id="LinkWithTvPanel"
                        itemSpacings="[12,12,25]"
                        vertAlignment="center"
                        translation="[0,245]">
                        <LayoutGroup layoutDirection="horiz" itemSpacings="[15]">
                            <Label
                                font="font:SmallSystemFont"
                                text="1." />
                            <Label
                                font="font:SmallSystemFont"
                                width="380"
                                wrap="true"
                                text="On your phone, open the YouTube app." />
                        </LayoutGroup>
                        <LayoutGroup layoutDirection="horiz" itemSpacings="[15]">
                            <Label
                                font="font:SmallSystemFont"
                                text="2." />
                            <Label
                                font="font:SmallSystemFont"
                                width="380"
                                wrap="true"
                                text="Tap the cast icon." />
                        </LayoutGroup>
                        <LayoutGroup layoutDirection="horiz" itemSpacings="[15]">
                            <Label
                                font="font:SmallSystemFont"
                                text="3." />
                            <Label
                                font="font:SmallSystemFont"
                                width="380"
                                wrap="true"
                                text="Tap 'Link with TV code' and enter the code below." />
                        </LayoutGroup>
                        <Label
                            id="LinkCodeLabel"
                            font="font:LargeBoldSystemFont"
                            color="#4287f5">
                            <Font role="font" uri="font:MediumSystemFontFile" size="48" />
                        </Label>
                    </LayoutGroup>
                </Group>
            </LayoutGroup>
        </Group>
    </children>
</component>