<component name="HomeScreenEditor" extends="Group" includes="AutoBind,Focus">
    <interface>
        <field id="value" type="array" onChange="OnValueChange" />
        <field id="save" type="boolean" alwaysNotify="true" />
        <field id="appController" type="node" bind="/AppController" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="#000000"
            opacity="0.5">
        </Rectangle>
        <Rectangle
            width="960"
            height="600"
            translation="[160,60]"
            color="#242424">
            <CheckList
                id="checkList"
                vertFocusAnimationStyle="floatingFocus"
                translation="[165,40]">

                <ContentNode role="content" />
            </CheckList>

            <Button
                id="moveUpButton"
                text="Move up"
                showFocusFootprint="true"
                minWidth="220"
                translation="[640,183]" />
            <Button
                id="moveDownButton"
                text="Move down"
                showFocusFootprint="true"
                minWidth="220"
                translation="[640,273]" />
            <Button
                id="closeButton"
                text="Close"
                showFocusFootprint="true"
                minWidth="150"
                translation="[500,500]" />
            <Button
                id="saveButton"
                text="Save"
                showFocusFootprint="true"
                minWidth="150"
                translation="[320,500]" />
        </Rectangle>
    </children>
</component>