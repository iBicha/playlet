<component name="SponsorBlockCategoryListItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />

        <field id="categoryTitle" type="string" alias="categoryLabel.text" />
        <field id="optionTitle" type="string" alias="optionLabel.text" />
        <field id="color" type="color" alias="colorRect.color" />
    </interface>
    <children>
        <Rectangle id="colorRect"
            width="52"
            height="28"
            translation="[10, 2]" />

        <Label id="categoryLabel"
            font="font:SmallestSystemFont"
            width="320"
            height="32"
            vertAlign="center"
            horizAlign="left"
            translation="[80, 0]" />
        <Label id="optionLabel"
            width="320"
            height="32"
            font="font:SmallestSystemFont"
            vertAlign="center"
            horizAlign="right"
            translation="[310, 0]" />
    </children>
</component>