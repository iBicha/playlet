<component name="ProfileIcon" extends="Group">
    <children>
        <Poster
            id="buttonIcon"
            width="40"
            height="40"
            uri="pkg:/images/icons/user.png" />

        <Poster
            id="circlePoster"
            width="40"
            height="40"
            blendColor="#DDDDDDFF"
            uri="pkg:/images/white-circle.png">
            <CirclePoster
                id="circlePosterInner"
                width="36"
                height="36"
                blendColor="#9696C8"
                uri="pkg:/images/white-circle.png"
                translation="[2,2]">
                <Label
                    id="letterLabel"
                    width="36"
                    height="36"
                    vertAlign="center"
                    horizAlign="center">
                    <Font role="font" uri="font:SystemFontFile" size="24" />
                </Label>
            </CirclePoster>
        </Poster>
    </children>
</component>